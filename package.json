{
  "name": "digital-cookbook",
  "version": "1.0.0",
  "description": "A way to digitize your recipes",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Misterjosh/digital-cookbook.git"
  },
  "keywords": [
    "MongoDB",
    "Express",
    "React",
    "Node",
    "NoSQL"
  ],
  "author": "Joshua Brooks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Misterjosh/digital-cookbook/issues"
  },
  "homepage": "https://github.com/Misterjosh/digital-cookbook#readme",
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.18",
    "passport-jwt": "^4.0.0",
    "passport-local-mongoose": "^6.1.0",
    "path": "^0.12.7"
  }
}
